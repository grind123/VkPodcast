<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/imv_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/button_gray_normal"
        android:src="@drawable/ic_podcast"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/tv_track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="12dp"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@id/tv_time"
        app:layout_constraintLeft_toRightOf="@id/imv_logo"
        app:layout_constraintTop_toTopOf="@id/imv_logo"
        app:layout_constraintBottom_toBottomOf="@id/imv_logo"/>



    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33:30"
        android:textColor="@color/color_light_text_secondary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/imv_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imv_logo"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вы можете добавить таймкоды и скорректировать подкаст в режиме редактирования"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_light_text_secondary"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/imv_logo"/>

    <TextView
        android:id="@+id/tv_edit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorAccent"
        android:paddingHorizontal="16dp"
        android:paddingTop="10.5dp"
        android:paddingBottom="11.5dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center_horizontal"
        android:text="Редактировать аудиозапись"
        android:textSize="15sp"
        android:background="@drawable/button_stroke_enable"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>